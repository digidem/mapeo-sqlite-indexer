{
  "name": "@mapeo/sqlite-indexer",
  "version": "1.0.0-alpha.2",
  "description": "Index Mapeo data in a SQLite database",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "run-p lint type tape",
    "lint": "eslint .",
    "tape": "c8 --100 tape 'test/**/*.js'",
    "posttest": "c8 report --reporter=text-lcov > ./coverage/lcov.info",
    "type": "tsc",
    "prepare": "husky install",
    "prepack": "npm run type"
  },
  "keywords": [],
  "author": "Digital Democracy",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "better-sqlite3": "^8.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.19",
    "@types/tape": "^5.6.0",
    "@types/tmp": "^0.2.3",
    "c8": "^8.0.0",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tape": "^5.6.4",
    "tmp": "^0.2.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidem/mapeo-sqlite-indexer.git"
  },
  "bugs": {
    "url": "https://github.com/digidem/mapeo-sqlite-indexer/issues"
  },
  "homepage": "https://github.com/digidem/mapeo-sqlite-indexer#readme"
}
